	"item": [
		{
			"name": "Generate Client Assertion",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							""
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"const client_assertion = pm.request.headers.get(\"Authorization\").replace(\"Bearer \", \"\");\r",
							"pm.collectionVariables.set(\"client_assertion\", client_assertion);"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"auth": {
					"type": "jwt",
					"jwt": [
						{
							"key": "privateKey",
							"value": "{{cert_privatey_key}}",
							"type": "string"
						},
						{
							"key": "header",
							"value": "{\r\n    \"alg\": \"RS256\",\r\n    \"typ\": \"JWT\",\r\n    \"x5t\": \"{{x5t}}\"\r\n}",
							"type": "string"
						},
						{
							"key": "payload",
							"value": "{\r\n  \"aud\": \"https://login.microsoftonline.com/{{tenant_id}}/oauth2/v2.0/token\",\r\n  \"exp\": {{exp}},\r\n  \"iss\": \"{{client_id}}\",\r\n  \"jti\": \"{{jti}}\",\r\n  \"nbf\": {{nbf}},\r\n  \"sub\": \"{{client_id}}\"\r\n}",
							"type": "string"
						},
						{
							"key": "addTokenTo",
							"value": "header",
							"type": "string"
						},
						{
							"key": "algorithm",
							"value": "RS256",
							"type": "string"
						},
						{
							"key": "isSecretBase64Encoded",
							"value": false,
							"type": "boolean"
						},
						{
							"key": "headerPrefix",
							"value": "Bearer",
							"type": "string"
						},
						{
							"key": "queryParamKey",
							"value": "token",
							"type": "string"
						}
					]
				},
